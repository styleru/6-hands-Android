<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/VKcolor">

    <ImageView
        android:id="@+id/VKsymbol"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/vk_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/divider"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="#435f7e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/VKsymbol"
        app:layout_constraintRight_toLeftOf="@+id/textVKauthorization"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textVKauthorization"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/VKauthorization"
        android:textColor="#b8ffffff"
        android:textSize="18sp"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="-4sp"
        android:gravity="center"
        android:fontFamily="Roboto Regular"
        app:layout_constraintLeft_toRightOf="@+id/divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>