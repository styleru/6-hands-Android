<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/flat_image"
        android:layout_width="164.5dp"
        android:layout_height="85.5dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/flat_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/flat_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/flat_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/metro_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/metro_color"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/metro_station_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Славянский бульвар"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/number_of_rooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-комнт. кв."
            android:textSize="7.2sp"/>

        <TextView
            android:id="@+id/flat_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8.6sp"
            android:layout_marginLeft="17dp"
            android:text="10000Р"/>
    </LinearLayout>
</LinearLayout>